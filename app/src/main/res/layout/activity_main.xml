<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="308dp"
        android:layout_height="68dp"
        android:layout_marginTop="10sp"
        android:contentDescription="@string/welcomeNote"
        android:fontFamily="serif"
        android:text="@string/welcomeNote"
        android:textAlignment="center"
        android:textColor="#D9F3F6"
        android:textSize="30sp"
        android:textStyle="bold"
        android:typeface="serif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="461dp"
        android:layout_height="747dp"
        android:layout_marginTop="10sp"
        android:layout_marginRight="12sp"
        android:contentDescription="main-grid"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/grid" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="295dp"
        android:layout_height="295dp"
        android:baselineAligned="false"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/i0"
                android:layout_width="85dp"
                android:layout_height="65dp"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:contentDescription="@string/clickableField"
                android:onClick="playerTap"
                android:tag="0" />

            <ImageView
                android:id="@+id/i1"
                android:layout_width="85dp"
                android:layout_height="65dp"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:contentDescription="@string/clickableField"
                android:onClick="playerTap"
                android:tag="1" />

            <ImageView
                android:id="@+id/i2"
                android:layout_width="85dp"
                android:layout_height="65dp"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:contentDescription="@string/clickableField"
                android:onClick="playerTap"
                android:tag="2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/i3"
                android:layout_width="85dp"
                android:layout_height="65dp"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:contentDescription="@string/clickableField"
                android:onClick="playerTap"
                android:tag="3" />

            <ImageView
                android:id="@+id/i4"
                android:layout_width="85dp"
                android:layout_height="65dp"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:contentDescription="@string/clickableField"
                android:onClick="playerTap"
                android:tag="4" />

            <ImageView
                android:id="@+id/i5"
                android:layout_width="85dp"
                android:layout_height="65dp"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:contentDescription="@string/clickableField"
                android:onClick="playerTap"
                android:tag="5" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/i6"
                android:layout_width="85dp"
                android:layout_height="65dp"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:contentDescription="@string/clickableField"
                android:onClick="playerTap"
                android:tag="6" />

            <ImageView
                android:id="@+id/i7"
                android:layout_width="85dp"
                android:layout_height="65dp"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:contentDescription="@string/clickableField"
                android:onClick="playerTap"
                android:tag="7" />

            <ImageView
                android:id="@+id/i8"
                android:layout_width="85dp"
                android:layout_height="65dp"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:contentDescription="@string/clickableField"
                android:onClick="playerTap"
                android:tag="8" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/statusBar"
        android:layout_width="319dp"
        android:layout_height="69dp"
        android:layout_marginBottom="10sp"
        android:background="@color/teal_700"
        android:backgroundTint="#4A0E0E0E"
        android:onClick="gameReset"
        android:tag="statusBar"
        android:text="Player 1's Turn"
        android:textAlignment="center"
        android:textColor="#D9F3F6"
        android:textSize="24sp"
        android:textStyle="bold"
        android:typeface="serif"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Player 1's Turn" />

</androidx.constraintlayout.widget.ConstraintLayout>